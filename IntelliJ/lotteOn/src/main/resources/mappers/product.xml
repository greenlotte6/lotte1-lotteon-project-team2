<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.lotteon.dao.ProductMapper">

    <select id="selectProductByProdNo" parameterType="string" resultType="kr.co.lotteon.dto.product.ProductDTO">
        SELECT
        p.*,
        i.sNameThumb3
        FROM
        Product p
        LEFT JOIN
        ProductImage i ON p.prodNo = i.prodNo
        WHERE
        p.prodNo = #{prodNo}
    </select>

</mapper>